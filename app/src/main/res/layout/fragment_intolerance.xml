<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCECE3">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/intolerance_list"
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:layout_below="@id/search_field"


        android:layout_marginTop="50dp"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/heading_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="49dp"
        android:fontFamily="cursive"
        android:text="Food Search"
        android:textColor="#555555"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/search_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading_label"
        android:layout_alignStart="@id/heading_label"
        android:layout_alignLeft="@id/heading_label"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/search_outline"
        android:ems="10"
        android:fontFamily="@font/nunito_semibold"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="Search here..."
        android:textColor="#999999"
        android:textSize="16sp" />

    <Button
        android:id="@+id/addIntolerance"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:layout_alignTop="@id/search_field"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@id/search_field"
        android:background="@android:drawable/ic_menu_add" />


</RelativeLayout>